              "required": true
            },
            {
              "paramType": "form",
              "name": "last_name",
              "type": "string",
              "description": "Last Name",
              "required": true
            },
            {
              "paramType": "form",
              "name": "email",
              "type": "string",
              "description": "Email",
              "required": true
            },
            {
              "paramType": "form",
              "name": "alt_email",
              "type": "string",
              "description": "Alternative email",
              "required": false
            },
            {
              "paramType": "form",
              "name": "password",
              "type": "string",
              "description": "Password",
              "required": true
            },
            {
              "paramType": "form",
              "name": "password_confirmation",
              "type": "string",
              "description": "Password confirmation",
              "required": true
            },
            {
              "paramType": "form",
              "name": "about",
              "type": "string",
              "description": "About me",
              "required": false
            },
            {
              "paramType": "form",
              "name": "mc_num",
              "type": "string",
              "description": "MC number",
              "required": false
            },
            {
              "paramType": "form",
              "name": "current_password",
              "type": "string",
              "description": "Current password, use to change password",
              "required": false
            }
          ],
          "responseMessages": [
            {
              "code": "not_valid",
              "responseModel": null,
              "message": "{'text': [ArrayOfErrors]}"
            },
            {
              "code": "ok",
              "responseModel": null,
              "message": null
            }
          ],
          "method": "patch",
          "nickname": "DeviseTokenAuth::Registrations#update"
        }
      ]
    },
    {
      "path": "oauth_login/{provider}.json",
      "operations": [
        {
          "summary": "CALLBACK for omniauth login",
          "parameters": [
            {
              "paramType": "session",
              "name": "redirect_url",
              "type": "string",
              "description": "Redirect URL after auth procedure.",
              "required": true
            },
            {
              "paramType": "session",
              "name": "user_role",
              "type": "string",
              "description": "User role, carrier or shipper",
              "required": true
            }
          ],
          "responseMessages": [
            {
              "code": "redirect",
              "responseModel": null,
              "message": null
            }
          ],
          "notes": "              This is the page where all omniauth provider land, user will be signed up or/and logged in and redirected\n              according to session.redirect_url, set it before redirecting user to any omniauth provider.<br/>\n              Send to provider link to this action. Currently: <strong>/oauth_login/:provider</strong>\n",
          "method": "get",
          "nickname": "DeviseTokenAuth::Registrations#oauth_login"
        }
      ]
    }
  ]
}